
type User {
  id: ID!
  firstName: String!
  lastName: String!
  email: String!
  profileImage: String
}

type LoginResult {
  token: String
  refreshToken: String
  status: Status
  user: User
  resource: Resource
}

type CreateUserResult {
  status: Status
  user: User
}

type UserResults {
  paging: Pagination
  filters: Filters!
  results: [User!]
}


input UpdateUser {
  name: String!
  email: String!
  password: String!
  confirmPassword: String!
  profileImage: String
}


input UpdateLogin {
  email: String!
  password: String!
}

input UpdateRefresh {
  refreshToken: String!
}